{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "network-drive",
  "title": "network-drive",
  "description": "List the available disk volume of a specified IP address (via SMB), mount and unmount those drives.",
  "icon": "nas-2.png",
  "author": "SuoweiHu",
  "categories": [
    "Productivity",
    "Developer Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "DEBUG - Show List",
      "description": "Template for showing a static list",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "type": "textfield",
      "name": "pref_smb_ip",
      "title": "Domain / IP address",
      "description": "The doamin or IP address of the SMB server.",
      "required": true
    },{
        "type": "textfield",
        "name": "pref_smb_usr",
        "title": "Username",
        "description": "The username to login with.",
        "required": true
      },{
        "type": "password",
        "name": "pref_smb_pwd",
        "title": "Passowrd",
        "description": "The password of the user.",
        "required": true
      }
  ],
  "dependencies": {
    "@raycast/api": "^1.75.1",
    "mac-network-drive": "^1.0.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
